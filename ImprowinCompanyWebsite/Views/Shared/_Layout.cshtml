    <script src="~/Scripts/jquery.isotope.min.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/wow.min.js"></script>
    <script>
        $(document).ready(function (e) {
           
            var str = document.URL;
            var pieces = str.split(/[\s#]+/);
            var Page = str.split(/[\s/]+/);
           
            if (Page[Page.length - 1] == '') {
                $("#navi li").removeClass("active");
                $("#index").attr("class", "active");
            }
            if (Page[Page.length - 1] == 'About') {
                $("#navi li").removeClass("active");
                $("#about").attr("class", "active");
            }
            if (Page[Page.length - 1] == 'Contact') {
                $("#navi li").removeClass("active");
                $("#contact").attr("class", "active");
            }

            if (Page[Page.length - 1] == 'Comment') {
                $("#navi li").removeClass("active");
                $("#admin").attr("class", "active");
            }

            if (pieces[pieces.length - 1] == 'recent-works') {
                $("#navi li").removeClass("active");
                $("#portfolio").attr("class", "active");
            }
            if (pieces[pieces.length - 1] == 'services') {
                $("#navi li").removeClass("active");
                $("#Service").attr("class", "active");
            }

           

            $("ul li a").click(function () {              
                $("#navi li").removeClass("active");
                $(this).parent().attr("class", "active");

            })
        })

    </script>
   
</head>
<body>
   
    @RenderSection("scripts", required: false)
    <header id="header">
        <div class="top-bar">
            <div class="container">
                <div class="row">
