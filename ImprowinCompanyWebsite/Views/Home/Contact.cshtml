@{
    ViewBag.Title = "Contact";
}

<div id="headerContent">
    <script type="text/javascript">
        $(document).ready(function () {
            
            
                
                        

            $("#contactForm").submit(function (e) {

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Contact")",
                    //contentType: "application/json ; charset=utf-8",
                    data: $("#contactForm").serialize(),
                    dataType: "json",
                    success: function (response) {
                        console.log("inside function");
                        if (response.msg == 'success') {
                            //debugger;
                            //console.log("inside if");
                            $("#contactForm").hide();
                            $("#sendstatus").text('Your message has been sent successfully');
                            $("#sendstatus").show('slow');
                        }

        else {
            //console.log("inside else");
                            $("#contactForm").hide();
            $("#sendstatus").attr('class','status alert alert-danger');
            $("#sendstatus").text('We apollogize for a technical issue which prevented mail send.');
            $("#sendstatus").show('slow');
        }
        },
        error: function (response) {
            //console.log("Failure");
            $("#contactForm").hide();
            $("#sendstatus").class("status alert alert-danger");
            $("#sendstatus").text('We apollogize for a technical issue on communication with server');
            $("#sendstatus").show();
        }
        });

        e.preventDefault();
        })
        })

    </script>
</div>

